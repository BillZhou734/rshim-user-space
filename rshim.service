[Unit]
Description=rshim driver for BlueField SoC
Documentation=man:rshim(8)
After=network.target

[Service]
Restart=always
Type=forking
ExecStart=-/usr/bin/rshim $OPTIONS
KillMode=process
ExecStop=/usr/bin/killall -SIGKILL rshim

[Install]
WantedBy=multi-user.target
